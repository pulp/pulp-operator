FROM quay.io/operator_testing/operator-test-playbooks

RUN	dnf -y update && \
    dnf -y install cmake && \
    dnf clean all

RUN pip3 install -U pip
RUN pip3 install ansible jmespath molecule more-itertools openshift yamllint pulp-cli

RUN curl -Lo /usr/local/bin/kind https://kind.sigs.k8s.io/dl/v0.11.1/kind-linux-amd64
RUN curl https://mirror.openshift.com/pub/openshift-v4/x86_64/clients/ocp/stable/openshift-client-linux.tar.gz | tar xvzf - -C /usr/local/bin oc --skip-old-files
RUN chmod ug+x /usr/local/bin/kind /usr/local/bin/oc

RUN ["/bin/bash", "-c", "ls -la"]
